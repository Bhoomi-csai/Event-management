generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
}

enum RegistrationStatus {
  REGISTERED
  CANCELLED
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role

  // ---------- PROFILE FIELDS ----------
  phone       String?
  image       String?
  roll        String?       // Student College ID / Roll number
  department  String?       // Student/Admin department
  year        String?       // Student year/semester
  skills      String?       // Comma-separated list
  about       String?       // About student/admin
  designation String?       // ADMIN only (Coordinator, HOD, Club Head)
  office      String?       // ADMIN office room number

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // RELATIONS
  events        Event[]        @relation("AdminEvents")
  registrations Registration[] @relation("UserRegistrations")
}

model Event {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  image       String?
  location    String
  date        DateTime
  startTime   String?
  endTime     String?

  createdAt   DateTime   @default(now())

  createdBy   Int
  category    String?    

  admin       User       @relation("AdminEvents", fields: [createdBy], references: [id], onDelete: Cascade)
  registrations Registration[]

  @@index([createdBy])
}

model Registration {
  id        Int                 @id @default(autoincrement())
  eventId   Int
  userId    Int
  status    RegistrationStatus  @default(REGISTERED)
  createdAt DateTime            @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation("UserRegistrations", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}
