generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
}

enum RegistrationStatus {
  REGISTERED
  CANCELLED
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role

  // PROFILE FIELDS (image removed)
  phone       String?
  roll        String?
  department  String?
  year        String?
  skills      String?
  about       String?
  designation String?
  office      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // RELATIONS
  events        Event[]        @relation("AdminEvents")
  registrations Registration[] @relation("UserRegistrations")
}

model Event {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  image       String?     // KEEP? (If you want to remove event image too, tell me)
  location    String
  date        DateTime
  startTime   String?
  endTime     String?
  category    String?

  createdAt   DateTime   @default(now())
  
  createdBy Int
  admin     User @relation("AdminEvents", fields: [createdBy], references: [id], onDelete: Cascade)

  registrations Registration[]

  @@index([createdBy])
}

model Registration {
  id        Int                 @id @default(autoincrement())
  eventId   Int
  userId    Int
  status    RegistrationStatus  @default(REGISTERED)
  createdAt DateTime            @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation("UserRegistrations", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}
